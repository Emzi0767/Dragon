@using RiotPls.DataDragon.Entities
@using RiotPls.DataDragon.Enums
@{
    var champion = (Champion) ViewData["champion"];
}

<h2>@champion.Name</h2>
<div class="row">
    <div class="col-sm">
        <div id="carousel" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">
                @for (var i = 0; i < champion.Skins.Count; i++)
                {
                    <li data-target="#carousel" data-slide-to="@i" @(i == 0 ? "class=\"active\"" : "")></li>
                }
            </ol>
            <div class="carousel-inner">
                @for (var i = 0; i < champion.Skins.Count; i++)
                {
                    var skin = champion.Skins[i];
                    <div class="carousel-item @(i == 0 ? "active" : "")">
                        <img class="d-block w-100" src="@skin.GetSplashArtUrl(true)" alt="@skin.Name">
                    </div>
                }
            </div>
            <a class="carousel-control-prev" href="#carousel" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carousel" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>

    </div>
    <div class="col-sm">
        <h3>@champion.Name</h3>
        <p class="text-justify">@champion.Lore</p>
    </div>
</div>

<br/>

<div class="card">
    <div class="card-header bg-secondary">
        <h2>Spells</h2>
    </div>
    <div class="card-body">
        <div class="row h-100 justify-content-center">
            <div class="col-lg-4">
                <p>
                    <img class="img-fluid" src="@champion.GetAbilityIconUrl(ChampionAbility.Passive)" alt="Passive spell"/> @champion.PassiveSpell.Name
                </p>
                <p>
                    @champion.PassiveSpell.RawDescription
                </p>
            </div>

            @for (var i = 0; i < champion.Spells.Count; ++i)
            {
                var spell = champion.Spells[i];

                <div class="col-sm col-lg-4">
                    <p>
                        <img class="img-fluid" src="@champion.GetAbilityIconUrl((ChampionAbility) i + 1)" alt="@spell.Id"/> @spell.Name
                    </p>
                    <p class="text-justify">
                        @spell.RawDescription
                    </p>
                    <p class="text-center">
                        Cost: @string.Join(" / ", spell.Costs)
                        <br/>
                        Cooldowns: @string.Join(" / ", spell.Cooldowns.Select(x => $"{x}s"))
                    </p>
                </div>
            }
        </div>
    </div>
</div>

<br/>

<div class="card">
    <div class="card-header bg-secondary">
        <h2>Tips</h2>
    </div>
    <div class="card-body">
        <div class="row h-100 justify-content-center">
            <div class="col-sm col-lg-6">
                <h2 class="text-center">Ally Tips</h2>
                @foreach (var tips in champion.AllyTips)
                {
                    <p class="text-justify">
                        @tips
                    </p>
                }
            </div>

            <div class="col-sm col-lg-6">
                <h2 class="text-center">Ennemy Tips</h2>
                @foreach (var tips in champion.AllyTips)
                {
                    <p class="text-justify">
                        @tips
                    </p>
                }
            </div>
        </div>
    </div>
</div>